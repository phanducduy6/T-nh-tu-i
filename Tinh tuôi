<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Máy tính tuổi thông minh</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 30px;
      background-color: #fff;
    }

    .container {
      max-width: 400px;
      border: 1px solid #ddd;
      padding: 20px;
      box-shadow: 0 0 8px rgba(0, 0, 0, 0.1);
    }

    h2 {
      margin-bottom: 20px;
    }

    input[type="number"] {
      padding: 8px;
      font-size: 16px;
      width: 100%;
      box-sizing: border-box;
      margin-bottom: 12px;
      border-radius: 6px;
      border: 1px solid #ccc;
    }

    button {
      padding: 10px 20px;
      font-size: 16px;
      background-color: #f0f0f0;
      border: none;
      border-radius: 12px;
      color: #007bff;
      cursor: pointer;
    }

    .result {
      margin-top: 10px;
      font-size: 17px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Máy tính tuổi thông minh</h2>
    <label for="tuoi">Nhập tuổi của bạn</label><br>
    <input type="number" id="tuoi" placeholder="Nhập tuổi của bạn">
    <div class="result" id="ketqua"></div>
    <br>
    <button onclick="tinhTuoi()">Tính tuổi của bạn</button>
  </div>

  <script>
    function tinhTuoi() {
      const tuoi = document.getElementById("tuoi").value;
      const ketqua = document.getElementById("ketqua");

      if (tuoi === "") {
        ketqua.textContent = "Vui lòng nhập tuổi.";
      } else {
        ketqua.textContent = `Bạn đã ${tuoi} tuổi rồi.`;
      }
    }
  </script>
</body>
